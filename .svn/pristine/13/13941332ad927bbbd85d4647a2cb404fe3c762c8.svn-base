.container {
  min-height: 100vh;
  display: flex;
  justify-content: center;
}

.gameContainer {
  display: flex;
  flex-direction: column;
  gap: 10px;
  justify-content: center;
  align-items: center;
  padding: 2em;
  background: #ddddd8;
  border-bottom: 6px inset rgba(0, 0, 0, 0.5);
  border-left: 6px inset rgba(0, 0, 0, 0.5);
  border-right: 6px inset rgba(255, 255, 255, 0.5);
  border-top: 6px inset rgba(255, 255, 255, 0.5);
  box-sizing: border-box;
}
.btn {
  font-family: "Aldrich", Helvetica, sans-serif;
  display: flex;
  flex-direction: column;
  cursor: pointer;
  align-items: center;
  justify-content: center;
  background: #ffecc5;
  border-bottom: 6px inset rgba(0, 0, 0, 0.5);
  border-left: 6px inset rgba(0, 0, 0, 0.5);
  border-right: 6px inset rgba(255, 255, 255, 0.5);
  border-top: 6px inset rgba(255, 255, 255, 0.5);
  box-sizing: border-box;
  color: rgb(0, 0, 0);
  padding: 0.5rem;
  min-width: 340px;
  height: 100px;
  font-size: 20px;
}

.btn:hover {
  background: #e6d2ab;
}

.btn:active {
  transform: translateY(2px);
}

.back-button {
  font-family: "Aldrich", Helvetica, sans-serif;
  background-color: white;
  color: black;
  font-size: 17px;
  font-weight: 600;
  padding: 1em 2em;
  cursor: pointer;
  transition: all 0.3s ease-in-out;
  border: 1px solid black;
  box-shadow: 0 0 0 0 black;
  margin-top: 50px;
}

.back-button:hover {
  transform: translateY(-4px) translateX(-2px);
  box-shadow: 2px 5px 0 0 black;
}

.back-button:active {
  transform: translateY(2px) translateX(1px);
  box-shadow: 0 0 0 0 black;
}

.word-screen {
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: rgba(128, 255, 31, 1);
  border: 15px solid rgb(20, 20, 63);
  height: 320px;
  .word-letters {
    display: flex;
    align-items: center;
    justify-content: center;
    text-transform: uppercase;
    background-color: rgba(98, 217, 7, 0.96);
    height: 170px;
    min-width: 650px;
    font-size: 100px;
    border-radius: 3px;
  }
}

.modal {
  display: flex;
  flex-direction: column;
  font-size: x-large;
  align-items: center;
}
