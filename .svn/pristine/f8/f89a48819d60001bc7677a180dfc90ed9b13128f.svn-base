<div class="container">
  <div
    style="display: flex; flex: 2; flex-direction: column; height: 100vh"
    [ngStyle]="{
      'background-image': 'url(../../assets/img/side1-game-select.png)',
      'background-repeat': 'no-repeat',
      'background-position': 'center',
      'background-size': 'cover'
    }"
  ></div>
  <div style="display: flex; flex: 1; flex-direction: column; height: 100vh">
    <div style="flex: 0.3; background-color: #e0dccc"></div>
    <div
      style="
        display: flex;
        flex: 1;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        gap: 100px;
        border: 1px solid black;
        height: 200px;
        background-color: #f9d6ac;
        padding: 0px 20px;
      "
      class="dashed"
    >
      <div class="scenarioTitle">
        <h1>{{ selectedScenario.title }}</h1>
      </div>
      <div class="issuesList">
        <button
          type="button"
          routerLink="{{ selectedScenario.minigames[0].game }}"
          class="btn-menu"
        >
          Problema #1
        </button>
        <button
          type="button"
          routerLink="{{ selectedScenario.minigames[1].game }}"
          class="btn-menu"
        >
          Problema #2
        </button>
        <button
          type="button"
          routerLink="{{ selectedScenario.minigames[2].game }}"
          class="btn-menu"
        >
          Problema #3
        </button>
      </div>
    </div>
    <div style="flex: 0.3; background-color: #e0dccc"></div>
  </div>

  <div
    style="display: flex; flex: 2; flex-direction: column; height: 100vh"
    [ngStyle]="{
      'background-image': 'url(../../assets/img/side2-game-select.png)',
      'background-repeat': 'no-repeat',
      'background-position': 'center',
      'background-size': 'cover'
    }"
  >
    <div class="timer">Time left: {{ timerService.timeLeft }}</div>
  </div>
</div>
