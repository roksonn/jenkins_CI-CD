.container {
  min-height: 100vh;
  display: flex;
  justify-content: center;
}

.buttonContainer {
  display: flex;
  flex-direction: column;
  gap: 50px;
  justify-content: center;
  align-items: center;
  padding: 2%;
}

.btn {
  height: 100px;
  width: 100px;
  margin: 10px;
  font-size: x-large;
  font-family: "Aldrich", Helvetica, sans-serif;
  /* pointer-events: none; */
}

.btn-submit:hover {
  background-color: aqua;
  cursor: pointer;
}

.arranged {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.arrow {
  --arrow-size: 6em;
  --arrow-color: #050505;
  --arrow-color-hover: rgb(253, 188, 66);
  position: relative;
  display: inline-flex;
  vertical-align: middle;
  width: var(--arrow-size);
  height: var(--arrow-size);
  overflow: hidden;
  transform: rotate(90deg);
  cursor: pointer;
}
.arrow::after {
  content: "";
  position: absolute;
  top: 50%;
  box-sizing: border-box;
  display: inline-block;
  width: calc(var(--arrow-size) * 0.7071);
  height: calc(var(--arrow-size) * 0.7071);
  border-top: calc(var(--arrow-size) / 5) solid var(--arrow-color);
  transition: all 150ms ease-in-out;
}
.arrow.up::after {
  left: calc(var(--arrow-size) / 5);
  border-left: calc(var(--arrow-size) / 5) solid var(--arrow-color);
  transform-origin: top left;
  rotate: -45deg;
}
.arrow.up:hover::after {
  box-shadow: calc(var(--arrow-size) / -8) calc(var(--arrow-size) / -8) 0
    var(--arrow-color);
}
.arrow.down::after {
  right: calc(var(--arrow-size) / 5);
  border-right: calc(var(--arrow-size) / 5) solid var(--arrow-color);
  transform-origin: top right;
  rotate: 45deg;
}
.arrow.down:hover::after {
  box-shadow: calc(var(--arrow-size) / 8) calc(var(--arrow-size) / -8) 0
    var(--arrow-color);
}
a:hover .arrow.up::after,
a:hover .arrow.down::after {
  border-color: var(--arrow-color-hover);
}
a:hover .arrow.up::after {
  box-shadow: calc(var(--arrow-size) / -8) calc(var(--arrow-size) / -8) 0
    var(--arrow-color);
}
a:hover .arrow.down::after {
  box-shadow: calc(var(--arrow-size) / 8) calc(var(--arrow-size) / -8) 0
    var(--arrow-color);
}
/* for demo only */
html,
body {
  height: 100%;
}
body {
  display: flex;
  gap: 2rem;
  align-items: center;
  justify-content: center;
  background: black;
  color: gray;
}
body > a .arrow {
  --arrow-size: 3rem;
}
a {
  color: skyblue;
  text-decoration: none;
}
a:hover {
  color: white;
}
p a {
  font-size: 1.25rem;
}

.back-button {
  font-family: "Aldrich", Helvetica, sans-serif;
  background-color: white;
  color: black;
  font-size: 17px;
  font-weight: 600;
  padding: 1em 2em;
  cursor: pointer;
  transition: all 0.3s ease-in-out;
  border: 1px solid black;
  box-shadow: 0 0 0 0 black;
  margin-top: 50px;
}

.back-button:hover {
  transform: translateY(-4px) translateX(-2px);
  box-shadow: 2px 5px 0 0 black;
}

.back-button:active {
  transform: translateY(2px) translateX(1px);
  box-shadow: 0 0 0 0 black;
}
