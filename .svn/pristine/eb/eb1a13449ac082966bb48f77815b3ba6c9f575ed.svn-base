<div
  class="container"
  [ngStyle]="{
    'background-image': 'url(../../assets/img/who-is-first.jpg)',
    'background-repeat': 'no-repeat',
    'background-position': 'center',
    'background-size': 'cover'
  }"
>
  <div
    style="
      display: flex;
      flex: 2;
      flex-direction: column;
      height: 100vh;
      justify-content: flex-start;
      align-items: center;
    "
  >
    <button routerLink="/game-select" class="back-button">Back</button>
  </div>
  <div style="display: flex; flex: 0.6; flex-direction: column; height: 100vh">
    <div
      style="
        display: flex;
        flex: 1;
        justify-content: center;
        align-items: center;
      "
    >
      <h1>Who is first?</h1>
    </div>
    <div class="cardboard-box-inner">
      <div class="gameContainer">
        <div style="display: flex">
          <div>
            <div
              style="
                display: flex;
                background-color: cyan;
                align-items: center;
                justify-content: center;
              "
            >
              <p style="font-size: xx-large">{{ this.displayWord }}</p>
            </div>
            <div style="display: flex; flex-direction: column">
              <div style="display: flex">
                <button class="btn">cuvant randmo 1</button>
                <button class="btn">cuvant randmo 2</button>
              </div>
              <div style="display: flex">
                <button class="btn">cuvant randmo 3</button>
                <button class="btn">cuvant randmo 4</button>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div
      style="
        display: flex;
        flex: 2;
        align-items: center;
        justify-content: center;
        scale: 100%;
      "
    >
      <img
        src="../../assets/img/cb-box.png"
        alt=""
        style="width: 194px; height: 160px"
      />
    </div>
  </div>

  <div style="display: flex; flex: 2; flex-direction: column; height: 100vh">
    <div class="timer">Time left: {{ timerService.timeLeft }}</div>
  </div>
</div>
