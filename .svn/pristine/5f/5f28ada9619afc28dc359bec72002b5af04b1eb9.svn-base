<div
  class="container"
  [ngStyle]="{
    'background-image': 'url(../../assets/img/button.jpg)',
    'background-repeat': 'no-repeat',
    'background-position': 'center',
    'background-size': 'cover'
  }"
>
  <div
    style="
      display: flex;
      flex: 2;
      flex-direction: column;
      height: 100vh;
      justify-content: flex-start;
      align-items: center;
    "
  >
    <button routerLink="/game-select" class="back-button">Back</button>
  </div>

  <div style="display: flex; flex: 0.6; flex-direction: column; height: 100vh">
    <div
      style="
        display: flex;
        flex: 1;
        justify-content: center;
        align-items: center;
      "
    >
      <h1 style="color: white; font-size: 50px">Fun Facts</h1>
    </div>
    <div class="cardboard-box-inner">
      <div class="gameContainer">
        <div style="display: flex; align-items: center">
          <!-- <button
            [disabled]="!checkedButton"
            #hold
            (click)="holdClick()"
            class="btn"
          >
            Press
          </button> -->

          <div class="toggle-button-cover">
            <div [hidden]="!checkedName">
              <p class="line-name">{{ randomLine }}</p>
            </div>
            <!-- <div class="button r" id="button-3">
              <input
                type="checkbox"
                class="checkbox"
                (click)="toggle()"
                [hidden]="checkedToggle"
              />

              <div class="knobs"></div>
              <div class="layer"></div>
            </div> -->

            <label class="rocker">
              <input
                type="checkbox"
                class="checkbox"
                (click)="toggle()"
                [disabled]="checkedToggle"
              />
              <span class="switch-left">On</span>
              <span class="switch-right">Off</span>
            </label>
            <button
              [disabled]="!checkedButton"
              #hold
              (click)="holdClick()"
              class="btn"
            >
              Press
            </button>
          </div>
        </div>
      </div>
    </div>
    <div>
      <dialog #modal>
        <div class="modal">
          <p>{{ message }}</p>
          <button (click)="closeModal()" class="modal-btn">OK</button>
        </div>
      </dialog>
    </div>
    <div
      style="
        display: flex;
        flex: 1;
        align-items: center;
        justify-content: center;
      "
    >
      <img
        src="../../assets/img/cb-box.png"
        alt=""
        style="width: 194px; height: 160px"
      />
    </div>
  </div>

  <div style="display: flex; flex: 2; flex-direction: column; height: 100vh">
    <div class="timer">Time left: {{ timerService.timeLeft }}</div>
  </div>
</div>
