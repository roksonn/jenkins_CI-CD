* {
  border: 1px solid black;
  border-style: dashed;
}

.container {
  min-height: 100vh;
  display: flex;
  justify-content: center;
  align-items: center;
}

.timer {
  order: 2;
}

.issuesList {
  display: flex;
  gap: 15px;
}

.scenarioTitle {
}

.btn-menu {
  font-family: "Aldrich", Helvetica, sans-serif;
  width: 135px;
  height: 30px;
  font-size: large;
  color: yellow;
  text-shadow: -1px -1px 0 #000, 1px -1px 0 #000, -1px 1px 0 #000,
    1px 1px 0 #000;
  background-color: transparent;
  border-color: transparent;
  cursor: pointer;
}

.btn-menu:active {
  transform: translate(2px, 2px);
}
