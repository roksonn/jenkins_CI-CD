<div
  class="container"
  [ngStyle]="{
    'background-image': 'url(../../assets/img/placeholder.jpg)',
    'background-repeat': 'no-repeat',
    'background-position': 'center',
    'background-size': 'cover'
  }"
>
  <div
    style="display: flex; flex: 2; flex-direction: column; height: 100vh"
  ></div>
  <div style="display: flex; flex: 0.6; flex-direction: column; height: 100vh">
    <div
      style="
        display: flex;
        flex: 1;
        justify-content: center;
        align-items: center;
      "
    >
      <h1>Keypads</h1>
    </div>
    <div class="cardboard-box-inner">
      <div class="gameContainer">
        <div style="display: flex">
          <button [disabled]="!checkedButton" #hold (click)="holdClick()">
            Hold
          </button>

          <div class="toggle-button-cover">
            <div class="button r" id="button-3">
              <input
                type="checkbox"
                class="checkbox"
                (click)="toggle()"
                [hidden]="checkedToggle"
              />

              <div class="knobs"></div>
              <div class="layer"></div>
            </div>
          </div>
          <div [hidden]="!checkedName">
            <p>{{ randomLine }}</p>
          </div>
        </div>
      </div>
    </div>
    <div
      style="
        display: flex;
        flex: 2;
        align-items: center;
        justify-content: center;
        scale: 100%;
      "
    >
      <img
        src="../../assets/img/cb-box.png"
        alt=""
        style="width: 194px; height: 160px"
      />
    </div>
  </div>

  <div style="display: flex; flex: 2; flex-direction: column; height: 100vh">
    <div class="timer">Time left: {{ timerService.timeLeft }}</div>
  </div>
</div>
