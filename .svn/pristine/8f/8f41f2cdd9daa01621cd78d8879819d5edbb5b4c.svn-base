<div
  class="container"
  [ngStyle]="{
    'background-image': 'url(../../assets/img/passwords.jpg)',
    'background-repeat': 'no-repeat',
    'background-position': 'center',
    'background-size': 'cover'
  }"
>
<div
style="
  display: flex;
  flex: 2;
  flex-direction: column;
  height: 100vh;
  justify-content: flex-start;
  align-items: center;
"
>
<button routerLink="/game-select" class="back-button">Back</button>
</div>
  <div style="display: flex; flex: 0.6; flex-direction: column; height: 100vh">
    <div
      style="
        display: flex;
        flex: 1;
        justify-content: center;
        align-items: center;
      "
    >
      <h1>Passwords</h1>
    </div>
    <div class="cardboard-box-inner">
      <div class="buttonContainer">
        <div style="display: flex">
          <div class="arranged">
            <a>
              <span
                class="arrow up"
                (click)="lastL(this.firstColumn)"
                #upButtonFirstColumn
              ></span>
            </a>
            <button class="btn" #middleButtonFirstColumn>
              {{ this.firstColumn.letters[firstColumn.currentIndex] }}
            </button>
            <a
              ><span
                class="arrow down"
                (click)="nextL(this.firstColumn)"
                #downButtonFirstColumn
              ></span>
            </a>
          </div>
          <div class="arranged">
            <a
              ><span
                class="arrow up"
                (click)="lastL(this.secondColumn)"
                #upButtonSecondColumn
              ></span
            ></a>
            <button class="btn" #middleButtonSecondColumn>
              {{ this.secondColumn.letters[secondColumn.currentIndex] }}
            </button>
            <a
              ><span
                class="arrow down"
                (click)="nextL(this.secondColumn)"
                #downButtonSecondColumn
              ></span
            ></a>
          </div>
          <div class="arranged">
            <a
              ><span
                class="arrow up"
                (click)="lastL(this.thirdColumn)"
                #upButtonThirdColumn
              ></span
            ></a>
            <button class="btn" #middleButtonThirdColumn>
              {{ this.thirdColumn.letters[thirdColumn.currentIndex] }}
            </button>

            <a
              ><span
                class="arrow down"
                (click)="nextL(this.thirdColumn)"
                #downButtonThirdColumn
              ></span
            ></a>
          </div>
          <div class="arranged">
            <a
              ><span
                class="arrow up"
                (click)="lastL(this.fourthColumn)"
                #upButtonFourthColumn
              ></span
            ></a>
            <button class="btn" #middleButtonFourthColumn>
              {{ this.fourthColumn.letters[fourthColumn.currentIndex] }}
            </button>

            <a
              ><span
                class="arrow down"
                (click)="nextL(this.fourthColumn)"
                #downButtonFourthColumn
              ></span
            ></a>
          </div>
          <div class="arranged">
            <a
              ><span
                class="arrow up"
                (click)="lastL(this.fifthColumn)"
                #upButtonFifthColumn
              ></span
            ></a>

            <button class="btn" #middleButtonFifthColumn>
              {{ this.fifthColumn.letters[fifthColumn.currentIndex] }}
            </button>

            <a
              ><span
                class="arrow down"
                (click)="nextL(this.fifthColumn)"
                #downButtonFifthColumn
              ></span
            ></a>
          </div>
        </div>
        <div>
          <button class="btn btn-submit" (click)="submit()">Submit</button>
        </div>
        <div>
          <dialog id="my-dialog" #modal>
            <p>{{ message }}</p>
            <button (click)="closeModal()">OK</button>
          </dialog>
        </div>
      </div>
    </div>
    <div
      style="
        display: flex;
        flex: 2;
        align-items: center;
        justify-content: center;
        scale: 100%;
      "
    >
      <img
        src="../../assets/img/cb-box.png"
        alt=""
        style="width: 194px; height: 160px"
      />
    </div>
  </div>

  <div style="display: flex; flex: 2; flex-direction: column; height: 100vh">
    <div class="timer">Time left: {{ timerService.timeLeft }}</div>
  </div>
</div>
