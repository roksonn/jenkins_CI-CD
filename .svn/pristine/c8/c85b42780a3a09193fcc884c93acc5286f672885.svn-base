@import url("https://fonts.googleapis.com/css?family=Aldrich&display=swap");

html,
body {
  min-height: 100vh;
  height: auto;
}

body {
  margin: 0;
  font-family: "Aldrich", Helvetica, sans-serif;
}

.timer {
  order: 2;
  align-self: center;
  font-size: 24px;
  font-weight: bold;
  color: #333;
  background-color: #f2f2f2;
  padding: 10px 20px;
  border: 2px solid #ccc;
  border-radius: 5px;
  margin-top: 50px;
  width: 185px;
}

.cardboard-box-inner {
  display: flex;
  flex: 3;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding: 50px 50px;
  background-color: #d9b38c;
  position: relative;
  margin-bottom: 10px;
  box-shadow: inset 0 0 20px rgba(0, 0, 0, 0.5);
}

.cardboard-box-inner::before {
  content: "";
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 50%;
  background-color: #b8a88b;
  transform: perspective(600px) rotateX(90deg);
  transform-origin: bottom;
}
