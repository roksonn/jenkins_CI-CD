<div
  class="container"
  [ngStyle]="{
    'background-image': 'url(../../assets/img/wires.jpg)',
    'background-repeat': 'no-repeat',
    'background-position': 'center',
    'background-size': 'cover'
  }"
>
  <div
    style="
      display: flex;
      flex: 2;
      flex-direction: column;
      height: 100vh;
      justify-content: flex-start;
      align-items: center;
    "
  >
    <button routerLink="/game-select" class="back-button">Back</button>
  </div>
  <div style="display: flex; flex: 0.6; flex-direction: column; height: 100vh">
    <div
      style="
        display: flex;
        flex: 1;
        justify-content: center;
        align-items: center;
      "
    >
      <div class="packing-label">
        <div class="label-header">
          <h2>Ordinea statiilor</h2>
        </div>
        <div class="label-content">
          <div>
            <p class="label-from">From: Continental</p>
            <p class="label-to">To: Digital Days</p>
            <p class="label-address">Salzburg 8, Sibiu, Romania</p>
          </div>
          <div>
            <img
              src="../../../assets/img/qr-code.png"
              alt=""
              style="width: 70px; height: 70px"
            />
          </div>
        </div>
      </div>
    </div>
    <div class="cardboard-box-inner">
      <div class="gameContainer">
        <div style="display: flex; gap: 250px">
          <div
            style="
              display: flex;
              flex-direction: column;
              gap: 20px;
              align-items: center;
            "
          >
            <button
              class="firstColumn btn"
              value="unitCheckin"
              #option1
              (click)="drawLine(option1)"
            >
              UNIT_CHECKIN
            </button>
            <button
              class="firstColumn btn"
              value="unitCheckout"
              #option2
              (click)="drawLine(option2)"
            >
              UNIT_RESULT
            </button>
            <button
              class="firstColumn btn"
              value="ping"
              #option3
              (click)="drawLine(option3)"
            >
              PING
            </button>
            <button
              class="firstColumn btn"
              value="identification"
              #option4
              (click)="drawLine(option4)"
            >
              IDENTIFICATION
            </button>
          </div>
          <div style="display: flex; flex-direction: column; gap: 20px">
            <button
              class="secondColumn btn"
              #first
              id="1"
              (click)="drawLine(first)"
            >
              Mesaj 1
            </button>
            <button
              class="secondColumn btn"
              #second
              id="2"
              (click)="drawLine(second)"
            >
              Mesaj 2
            </button>
            <button
              class="secondColumn btn"
              #third
              id="3"
              (click)="drawLine(third)"
            >
              Mesaj 3
            </button>
            <button
              class="secondColumn btn"
              #fourth
              id="4"
              (click)="drawLine(fourth)"
            >
              Mesaj 4
            </button>
          </div>
        </div>
        <div style="display: flex; width: auto; gap: 50px">
          <button class="btn btn-clear" (click)="clearArray()">Clear</button>
          <button class="btn btn-submit" (click)="submit()">Submit</button>
        </div>
      </div>
    </div>
    <div
      style="
        display: flex;
        flex: 1;
        align-items: center;
        justify-content: center;
        scale: 100%;
      "
    >
      <img
        src="../../assets/img/cb-box.png"
        alt=""
        style="width: 194px; height: 160px"
      />
    </div>
  </div>

  <div style="display: flex; flex: 2; flex-direction: column; height: 100vh">
    <div class="timer">Time left: {{ timerService.timeLeft }}</div>
  </div>
</div>

<div>
  <dialog #modal>
    <div class="modal">
      <p>{{ message }}</p>
      <button (click)="closeModal()" class="modal-btn">OK</button>
    </div>
  </dialog>
</div>
