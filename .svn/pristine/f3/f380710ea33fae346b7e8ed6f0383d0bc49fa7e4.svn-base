<div
  class="container"
  [ngStyle]="{
    'background-image': 'url(../../assets/img/game-select.jpg)',
    'background-repeat': 'no-repeat',
    'background-position': 'center',
    'background-size': 'cover'
  }"
>
  <div
    style="display: flex; flex: 2; flex-direction: column; height: 100vh"
  ></div>
  <div style="display: flex; flex: 0.6; flex-direction: column; height: 100vh">
    <div
      style="
        display: flex;
        flex: 1;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        gap: 100px;
        border: 1px solid black;
        height: 200px;
        background-color: #f9d6ac;
        padding: 0px 10px;
      "
      class="conveyor-belt"
    >
      <div class="scenarioTitle">
        <h1>{{ selectedScenario.title }}</h1>
      </div>
      <div class="issuesList">
        <button
          type="button"
          routerLink="{{ selectedScenario.minigames[0].game }}"
          class="cardboard-button"
        >
          Problema #1
        </button>
        <button
          type="button"
          routerLink="{{ selectedScenario.minigames[1].game }}"
          class="cardboard-button"
        >
          Problema #2
        </button>
        <button
          type="button"
          routerLink="{{ selectedScenario.minigames[2].game }}"
          class="cardboard-button"
        >
          Problema #3
        </button>
      </div>
    </div>
  </div>

  <div style="display: flex; flex: 2; flex-direction: column; height: 100vh">
    <div class="timer">Time left: {{ timerService.timeLeft }}</div>
  </div>
</div>
