<div class="container">
  <div style="display: flex; flex: 1; flex-direction: column; height: 100vh">
    <div style="flex: 1.3; background-color: #c07474"></div>
  </div>
  <div style="display: flex; flex: 1; flex-direction: column; height: 100vh">
    <div
      style="
        display: flex;
        flex: 1;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        gap: 20px;
        border: 1px solid black;
        height: 200px;
        background-color: #fff;
      "
    >
      <div class="scenarioTitle">
        <h1>{{ selectedScenario.title }}</h1>
      </div>
      <div class="issuesList">
        <button
          type="button"
          routerLink="{{ selectedScenario.minigames[0].game }}"
          class="btn-menu"
        >
          Problema #1
        </button>
        <button
          type="button"
          routerLink="{{ selectedScenario.minigames[1].game }}"
          class="btn-menu"
        >
          Problema #2
        </button>
        <button
          type="button"
          routerLink="{{ selectedScenario.minigames[2].game }}"
          class="btn-menu"
        >
          Problema #3
        </button>
      </div>
    </div>
  </div>

  <div style="display: flex; flex: 1; flex-direction: column; height: 100vh">
    <div style="flex: 1.3; background-color: #c07474">
      <div class="timer">{{ timerService.timeLeft }}</div>
    </div>
  </div>
</div>
