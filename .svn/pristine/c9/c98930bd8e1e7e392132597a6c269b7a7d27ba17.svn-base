import { Injectable } from '@angular/core';
import { Subscription, interval } from 'rxjs';

@Injectable({
  providedIn: 'root',
})
export class TimerService {
  constructor() {}

  private subscription!: Subscription;

  public dateNow = new Date();
  public dDay = new Date(this.dateNow.getTime() + 7000);
  milliSecondsInASecond = 1000;
  hoursInADay = 24;
  minutesInAnHour = 60;
  SecondsInAMinute = 60;

  public timeDifference: any;
  public secondsToDday: any;
  public minutesToDday: any;

  private getTimeDifference() {
    this.timeDifference = this.dDay.getTime() - new Date().getTime();

    if (this.secondsToDday === 0 && this.minutesToDday === 0) {
      this.ngOnDestroy();
    }

    this.allocateTimeUnits(this.timeDifference);
    console.log(this.secondsToDday, this.minutesToDday);
  }

  private allocateTimeUnits(timeDifference: any) {
    this.secondsToDday = Math.floor(
      (timeDifference / this.milliSecondsInASecond) % this.SecondsInAMinute
    );
    this.minutesToDday = Math.floor(
      (timeDifference / (this.milliSecondsInASecond * this.minutesInAnHour)) %
        this.SecondsInAMinute
    );
  }

  ngOnInit() {
    this.subscription = interval(200).subscribe((x) => {
      this.getTimeDifference();
    });
  }

  ngOnDestroy() {
    this.subscription.unsubscribe();
    alert('Ai pierdut bossule');
  }
}
