import { Component, HostListener, OnDestroy, OnInit } from '@angular/core';
import { TimerService } from '../services/timer.service';
import { StartPageComponent } from '../start-page/start-page.component';
import { Router } from '@angular/router';

interface Scenario {
  title: string;
  minigames: { game: string; solved: boolean }[];
}

export let selectedScenario!: Scenario;

@Component({
  selector: 'app-game-select',
  templateUrl: './game-select.component.html',
  styleUrls: ['./game-select.component.css'],
})
export class GameStartComponent implements OnInit {
  @HostListener('window:beforeunload') goToPage() {
    this.router.navigate(['/hello']);
  }

  isFullscreen!: string;
  scenario!: Scenario;

  constructor(public timerService: TimerService, private router: Router) {}

  ngOnInit(): void {
    selectedScenario = StartPageComponent.scenarios[StartPageComponent.rand];
    this.scenario = selectedScenario;
    console.log(selectedScenario);

    this.timerService.startTimer();
  }
}
