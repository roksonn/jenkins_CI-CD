<div class="container">
  <div style="flex: 1.3; background-color: darkred">
    <p>Something Here too</p>
    <div class="timer">
      <h4>Count down timer</h4>
      <span id="minutes"> {{ timerService.minutesToDday }} </span>Min
      <span id="seconds"> {{ timerService.secondsToDday }} </span>S
    </div>
  </div>
  <div class="gameContainer">
    <div style="display: flex">
      <button [disabled]="!checked" #hold>Hold</button>
      <div class="toggle-button-cover">
        <div class="button r" id="button-3">
          <input type="checkbox" class="checkbox" (click)="toggle()" />
          <div class="knobs"></div>
          <div class="layer"></div>
        </div>
      </div>
      <div class="vertical"></div>
    </div>
  </div>
  <div style="flex: 1.3; background-color: darkred"><p>Something Here</p></div>
</div>
